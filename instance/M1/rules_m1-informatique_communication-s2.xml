<rule>
    <selector generator="(class,*)" filters="part[id='Communication-s2-CM']"/>
    <constraint name="sameRooms" type="hard" />
</rule>

<rule>
    <selector generator="(class,*)" filters="course[id='Communication-s2-CM']"/>
    <constraint name="sameTeachers" type="hard" />
</rule>

<rule>
    <selector generator="(class,*)" filters="part[id='Communication-s2-TP']"/>
    <constraint name="sameRooms" type="hard" />
</rule>

<rule>
    <selector generator="(class,*)" filters="course[id='Communication-s2-TP']"/>
    <constraint name="sameTeachers" type="hard" />
</rule>

<rule >
	<selector generator="(class,*)" filters="part[id='Communication-s2-CM']"/>
	<selector generator="(class,{1})" filters="part[id='Communication-s2-TP']"/>
	<constraint name="sequenced" type="hard"/>
</rule>


<rule>
    <selector generator="(class,*)" filters="course[id='Communication-s2-CM']"/>
    <constraint name="differentWeek" type="hard" />
</rule>