<rule>
    <selector generator="(class,*)" filters="part[id='Programmation-parallèle-CM']"/>
    <constraint name="sameWeeklySlot" type="hard"/>
</rule>

<rule>
    <selector generator="(class,*)" filters="part[id='Programmation-parallèle-TP']"/>
