</rule>

<rule>
    <selector generator="(course,*)" filters="part[id='GNU-Linux-CM']{2,4}|part[id='GNU-Linux-CM']"/>
    <constraint name="sameWeeklySlot" type="hard"/>
</rule>

<rule>
    <selector generator="(course,*)" filters="part[id='Architecture-distribuée-CM']{5}|part[id='Architecture-distribuée-TP']{3}"/>
    <constraint name="sameWeeklySlot" type="hard"/>
</rule>

<rule>
	<selector generator="(class,{5})" filters="part[id='Architecture-distribuée-CM']"/>
	<selector generator="(class,{1})" filters="part[id='Architecture-distribuée-TP']"/>
	<constraint name="sequenced" type="hard"/>
</rule>
